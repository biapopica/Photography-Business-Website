---
import '@fontsource-variable/montserrat'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Salut! Mă numesc Paul Clapa și sunt atras de peisaje, de măreția munților, de misterul pe care-l afișează pădurile și de
		aceea, prin fotografiile mele, încerc să prezint aceste subiecte așa cum le-am simțit eu...
		minunate"
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="theme-color" content="#ffffff" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="full-height relative bg-neutral-800 font-MontSerrat text-cream">
		<slot />
	</body>
</html>

<script>
	import Blobity from 'blobity'

	const options = {
		size: 40,
		mode: 'slow',
		dotColor: '#f5eddf',
		dotSize: 10,
		magnetic: false,
		zIndex: 100,
		invert: true,
		kineticMorphing: false,
		focusableElements: '[data-blobity-focus], [data-blobity-socials]',
		radius: 15,
		focusableElementsOffsetY: 15,
		focusableElementsOffsetX: 10
	}

	const optionsBebeSalvator = {
		size: 40,
		mode: 'slow',
		dotColor: '#f5eddf',
		dotSize: 10,
		magnetic: false,
		color: '#f5eddf',
		zIndex: 100,
		opacity: 0.5,
		kineticMorphing: false,
		focusableElements: '[data-blobity-focus], [data-blobity-socials]',
		radius: 15,
		focusableElementsOffsetY: 15,
		focusableElementsOffsetX: 10
	}

	let blobity = null

	const mediaQuery = window.matchMedia('(min-width: 1024px)')

	if (mediaQuery.matches && blobity == null) {
		blobity = new Blobity(options)
	}

	mediaQuery.onchange = (e) => {
		if (e.matches && blobity == null) {
			blobity = new Blobity(options)
		} else if (!e.matches && blobity != null) {
			blobity.destroy()
			blobity = null
		}
	}
</script>

<style is:global>
	.full-height {
		min-height: 100vh;
		min-height: 100svh;
	}
</style>
